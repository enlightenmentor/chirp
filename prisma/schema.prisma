generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  hash         String
  salt         String
  displayName  String?
  profilePhoto String?
  coverPhoto   String?
  createdAt    DateTime @default(now())
}
